# OpenAI
OPENAI_API_KEY=sk-...         # do NOT commit real keys
OPENAI_MODEL=gpt-4o-mini

# Graph backend:
# - memory (default): runs without any external DB
# - neo4j: connect to a running Neo4j via bolt
GRAPH_BACKEND=sqlite

# Neo4j (only used when GRAPH_BACKEND=neo4j)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4jpassword

# For offline testing without keys/network:
MOCK_LLM=1
